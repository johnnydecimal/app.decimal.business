---
interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<div class="slice-container" class:list={className}>
  {/* layout-container is what does all of the work */}
  <div class="slice-inner">
    <slot />
  </div>
</div>

<style lang="scss">
  @use "/src/styles/common" as *;
</style>
