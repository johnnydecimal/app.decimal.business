    <div class="layout-right-item" set:html={costHtml} />
  </div>
</Slice>

<Slice id="when" className="descriptive-text">
  <div class="layout-grid-left-right">
    <h3 class="layout-left-item">When?</h3>
    <div class="layout-right-item" set:html={whenHtml} />
  </div>
</Slice>

