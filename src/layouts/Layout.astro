---
interface Props {
  testRun?: boolean;
  title?: string;
}

import "node_modules/modern-normalize/modern-normalize.css";
import "@styles/global.scss";

import Search from "@components/common/Search.astro";
// import SignInPage from "@components/SignInPage.astro";
import AccountManagement from "@components/AccountManagement.astro";
import Footer from "@components/common/Footer.astro";
// import { SignedOut } from "@clerk/astro/components";
import SignUpOrSignInBanner from "@components/SignUpOrSignInBanner.astro";
import { SignedOut, SignedIn } from "@clerk/astro/components";
import OnboardingBanner from "@components/OnboardingBanner.astro";
const { slug } = Astro.params;
const { title } = Astro.props;
---

<!-- 🐓🐓🐓 This system is dedicated to Wendy, Marie, and Belinda. We loved them very much. -->
<html lang="en">
  <head>
    <title>Johnny.Decimal Small Business System {title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- <link rel="stylesheet" href="@styles/reset.css" /> -->
    <link
      rel="preload"
      href="/fonts/BerkeleyMono/BerkeleyMono-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/BerkeleyMono/BerkeleyMono-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/BerkeleyMono/BerkeleyMono-Italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/BerkeleyMono/BerkeleyMono-BoldItalic.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <script>
      // Only load on production environment.
      if (window.location.host !== "smallbusiness.johnnydecimal.com")
        window.goatcounter = { no_onload: true };
    </script>
    <script
      is:inline
      data-goatcounter="https://jdcmal.goatcounter.com/count"
      async
      src="//gc.zgo.at/count.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/mermaid/dist/mermaid.min.js"
    ></script>
    <script>
      // @ts-ignore
      mermaid.initialize({ startOnLoad: true });
    </script>
  </head>
  <body id={`body-${title?.replace(".", "_")}`}>
    {
      /* In this new world, we're not using Clerk's components at this level.
         We handle all auth stuff down at the component level. */
    }

    <SignedOut>
      <SignUpOrSignInBanner />
    </SignedOut>
    <SignedIn>
      <OnboardingBanner />
    </SignedIn>
    <Search />
    <main>
      <slot />
    </main>
    <AccountManagement />
    <Footer />
  </body>
</html>

<style lang="scss">
  @use "@styles/common" as *;
</style>
