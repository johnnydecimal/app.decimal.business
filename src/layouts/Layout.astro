---
import {
  SignedIn,
  SignedOut,
  // UserButton,
  SignInButton,
  SignOutButton,
} from "@clerk/astro/components";

// const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/src/styles/reset.css" />
    <link
      rel="preload"
      href="/fonts/BerkeleyMono/BerkeleyMono-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/BerkeleyMono/BerkeleyMono-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/BerkeleyMono/BerkeleyMono-Italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/BerkeleyMono/BerkeleyMono-BoldItalic.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/mermaid/dist/mermaid.min.js"
    ></script>
    <script>
      // @ts-expect-error
      mermaid.initialize({ startOnLoad: true });
    </script>
  </head>
  <body>
    <SignedOut>
      <nav>
        <SignInButton />
      </nav>
    </SignedOut>
    <SignedIn>
      <main>
        <slot />
      </main>
      <footer><hr /><SignOutButton /></footer>
    </SignedIn>
  </body>
</html>

<style lang="scss">
  @use "@styles/fonts";

  :global(*) {
    // border: 1px dotted lightblue;
  }

  body {
    margin-top: 20px;
  }

  main {
    font-family: "Berkeley Mono", ui-monospace, "Cascadia Code",
      "Source Code Pro", Menlo, Consolas, "DejaVu Sans Mono", monospace;
    // margin: 0 auto;
    // max-width: 650px;
    // padding: 0 20px;
    // @include r.mobile {
    //   padding: 0 10px;
    // }
  }

  footer {
    margin-top: 100px;
  }
</style>
