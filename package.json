{
  "name": "astro.decimal.business",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run generate-search && astro dev",
    "generate-ids": "node src/scripts/generateIds.js",
    "generate-search": "npx tsx ./src/helpers/generateSearchIndex.ts",
    "start": "astro dev",
    "build": "npm run generate-search && astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test && echo '\n\nYou might wanna git commit now.\n'",
    "test:update": "playwright test --update-snapshots && git acm 'Test: update snapshots'"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.0.6",
    "@astrojs/netlify": "^6.1.0",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@clerk/astro": "^2.1.9",
    "astro": "^5.1.7",
    "fuse.js": "^7.0.0",
    "marked": "^15.0.6",
    "marked-smartypants": "^1.1.9",
    "normalize.css": "^8.0.1",
    "sass": "^1.83.4",
    "sass-embedded": "^1.83.4",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "tsx": "^4.19.2"
  }
}
